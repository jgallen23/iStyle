$highlight-button-color = saturate($button-color, 30) 

header-bg(color)
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,lighten(color, 10)), color-stop(2%,lighten(color, 15)), color-stop(3%,color), color-stop(49%, darken(color, 5)), color-stop(51%, darken(color, 8)), color-stop(97%, darken(color, 15)), color-stop(100%, darken(color, 50)))

button-bg(color= $button-color)
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, lighten(color, 2)), color-stop(49%, darken(color, 2)), color-stop(51%, darken(color, 5)), color-stop(100%, darken(color, 15)))

button(color = $button-color)
  button-bg(color)
  display: inline-block
  font-size: 12px
  font-weight: bold
  color: #fff
  text-shadow: 0 -1px 0 rgba(0,0,0, 0.4)
  padding: 0px 12px
  height: 26px
  border: 1px solid rgba(0,0,0, 0.4)
  -webkit-box-shadow: 0 1px 0 rgba(255,255,255, 0.35), inset 0 0.5px 1px rgba(0,0,0, 0.25)
  -webkit-border-radius: 5px
  line-height: 25px 

html,body
  height: 100%

body
  margin: 0
  padding: 0
  font-size: 13px
  font-family: 'Arial'

*
  -webkit-tap-highlight-color: rgba(0,0,0,0)

button
  -webkit-appearance: none
  border: 0
  background: 0

.Page
  width: 100%
  height: 100%
  display: -webkit-box
  -webkit-box-orient: vertical
  -webkit-box-align: stretch
  -webkit-transform: translateX(100%)

  header
    line-height: 42px
    color: #fff
    text-align: center
    height: 42px
    border: 1px solid #cad6e2
    border-bottom-color: #22374a
    border-right: 0
    border-left: 0
    header-bg($header-color)

    h1
      font-size: 20px
      color: #fff
      text-shadow: 0 -1px 0 rgba(0,0,0, 0.4)
      margin: 0

    .right
      right: 10px

    .left
      left: 10px

    button
      position: absolute
      top: 9px

    button.large
      font-size: 20px
      line-height: 8px

  footer
    height: 20px

  [role='content']
    -webkit-box-flex: 1
    overflow: hidden


.Page:first-child
  -webkit-transform: translateX(0)

.List
  list-style: none
  margin: 0
  padding: 0
  -webkit-box-flex: 1

  li
    margin: 0
    font-family: "Helvetica Neue"
    font-size: 20px
    font-weight: bold
    border-bottom: 1px solid #e0e0e0
    padding: 10px 0
    line-height: 25px
    padding-left: 10px

  li.header
    height: 18px
    line-height: 18px
    font-size: 12px
    background: -webkit-gradient(linear, left top, left bottom, from(#98a5af), to(#b6bdc3))
    color: #fff
    border: 1px solid #95a0a8
    padding: 0 10px
    margin: 0

  li .item
    -webkit-box-flex: 1

  li .name
    height: 25px
    overflow: hidden

  li .comment
    font-size: 17px
    color: #385487
    font-weight: normal

  li .details
    background: url(../images/details.png)
    height: 24px
    width: 24px
    background-size: 24px 24px
    margin-right: 5px

.Button, 
button
  button()

.Button:active,
button:active
  button-bg(darken($button-color, 20))

.Button.Important,
button.Important
  button($important-button-color)

.Button.Important:active,
button.Important:active
  button-bg(darken($important-button-color, 20))

.Button.Highlight,
button.Highlight
  button($highlight-button-color)

.Button.Highlight:active,
button.Highlight:active
  button-bg(darken($highlight-button-color, 20))
